@model test.Models.Food

@{
    ViewData["Title"] = "InfoFood";
    var nameCategory = await _foodService.SearchCategory(Model.CategoryId);
}
<div class="topic">
    <h1>ข้อมูล เมนู</h1>

    <img src="@Model.Image" />
</div>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ExtendFood.Qut)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ExtendFood.Qut)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ExtendFood.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ExtendFood.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.Name)
        </dt>
        <dd class="col-sm-10">
            <a>@nameCategory.Name</a>
        </dd>
      
    </dl>
</div>
<div>
    @if (User.IsInRole("User") || User.IsInRole("Admin") || User.IsInRole("Master"))
    {
        <div>
            <a class="btn btn-outline-primary" asp-action="AddCart" asp-route-id="@Model.Id" id="Buy" onclick="buy()">Buy</a>
            <a class="btn btn-outline-primary" asp-action="Index">Back to List</a>
        </div>
        
    }
    @if (User.IsInRole("Admin"))
    {
        <a class="btn btn-outline-warning" asp-action="DeleteFood" asp-route-id="@Model.Id" >Delete</a>
        <a class="btn btn-outline-info" asp-action="EditFood" asp-route-id="@Model.Id">Edit</a>
    }
    
</div>


